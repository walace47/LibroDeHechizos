<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark">

    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark">

        <TableRow
            android:id="@+id/clase"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:backgroundTint="@color/colorPrimaryDark"
            android:foregroundTint="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/txt_hechizo_clases"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="mostrar clases"
                android:textColor="@android:color/background_light"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:id="@+id/nombre_hechizo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_hechizo_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="0"
                android:background="@android:drawable/editbox_background"
                android:gravity="center"
                android:text="mostrar nombre"
                android:textColor="@android:color/background_dark"
                android:textColorLink="@android:color/background_dark"
                android:textIsSelectable="false"
                android:textSize="16sp" />

        </TableRow>

        <TableRow
            android:id="@+id/tbl_escuela_nivel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:backgroundTint="@color/colorPrimaryDark"
            android:gravity="center">

            <TextView
                android:id="@+id/txt_hechizo_escuela_nivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Evocacion nivel 2"
                android:textColor="@android:color/background_light" />

        </TableRow>

        <TableRow
            android:id="@+id/tbl_rango_coste"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_rango"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:text="Rango: 60 pies"
                    android:textColor="@android:color/background_dark"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/txt_coste"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@android:drawable/editbox_background"
                    android:text="wqqqqqqqqqqqqqqqqqqqqqqqqqqqqqqq"
                    android:textColor="@android:color/background_dark" />

            </LinearLayout>

        </TableRow>

        <TableRow
            android:id="@+id/tbl_componenentes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:backgroundTint="@color/colorPrimaryDark">

            <TextView
                android:id="@+id/txt_componentes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:text="Componentes:  V,  S,  M  (una  pizca  de  sal  y   una  pieza  de  cobre  colocada  en  cada  uno  de   los  ojos  del  cuerpo,  los  cuales  deben  perma- necer ahí por toda la duración)"
                android:textColor="@android:color/background_dark" />

        </TableRow>

        <TableRow
            android:id="@+id/tbl_duracion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txt_duracion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:drawable/editbox_background"
                        android:text="duracion:concentracion 1 hora"
                        android:textColor="@android:color/background_dark" />
                </LinearLayout>

            </RelativeLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Descripcion"
                android:textColor="@android:color/background_light"
                android:visibility="visible" />
        </TableRow>

        <TableRow
            android:id="@+id/tbl_descripcion"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <WebView
                android:id="@+id/txt_descripcion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_a_mayor_nivel_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="a mayor nivel"
                android:textColor="@android:color/background_light" />
        </TableRow>

        <TableRow
            android:id="@+id/tbl_a_mayor_nivel"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_a_mayor_nivel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:drawable/editbox_background"
                android:textAlignment="inherit"
                android:textColor="@android:color/background_dark" />
        </TableRow>
    </TableLayout>
</ScrollView>