<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFondo"
    android:orientation="vertical"
    android:weightSum="1">

    <EditText
        android:id="@+id/edt_personaje_nombre"
        android:layout_width="199dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="Nombre"
        android:inputType="textPersonName"
        android:textColorLink="@color/colorPrimaryDark"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/txt_clase"
        android:layout_width="93dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:text="Clase"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spn_personaje_clase"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:saveEnabled="false"
        android:scrollbarSize="16dp"

        />


    <TextView
        android:id="@+id/txt_raza"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:text="Raza"
        android:textColor="@android:color/black"
        android:textSize="14sp" />

    <Spinner
        android:id="@+id/spn_personaje_raza"
        android:layout_width="132dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:scrollbarSize="16dp"

        />

    <Button
        android:id="@+id/btn_personaje_crear"
        android:layout_width="52dp"
        android:layout_height="wrap_content"
        android:background="@android:drawable/ic_menu_save"
        android:elevation="0dp"
        android:gravity="center"
        android:onClick="btnPersonajeCrear"
        android:textColor="@android:color/holo_green_dark"
        android:textColorLink="@color/colorPrimaryDark" />

</LinearLayout>
